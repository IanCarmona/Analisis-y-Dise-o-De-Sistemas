    <div class="container">

        <form action="" method="post" class="mt-4">
            <h1 class="text-center">Editar Empleado</h1>
            <div class="row">
                <div class="col-md-4 text-center mb-3">
                    <label class="col-form-label col-form-label-sm" for="nombre">Nombre(s)</label>
                    <input class="form-control form-control-sm" type="text" id="nombre" name="nombre"
                        value="{{data.nombre}}" required>
                </div>
                <div class="col-md-4 text-center mb-3">
                    <label class="col-form-label col-form-label-sm" for="apPat">Apellido Paterno</label>
                    <input class="form-control form-control-sm" type="text" id="apPat" name="apPat"
                        value="{{data.apPat}}" required>
                </div>
                <div class="col-md-4 text-center mb-3">
                    <label class="col-form-label col-form-label-sm" for="apMat">Apellido Materno</label>
                    <input class="form-control form-control-sm" type="text" id="apMat" name="apMat"
                        value="{{data.apMat}}">
                </div>
            </div>
            <div class="row">
                <div class="col-md-6 text-center mb-3">
                    <label class="col-form-label col-form-label-sm" for="correo">Email</label>
                    <input class="form-control form-control-sm" type="email" id="correo" name="correo"
                        value="{{data.correo}}" required>
                </div>
                <div class="col-md-6 text-center mb-3">
                    <label class="col-form-label col-form-label-sm" for="telefono">Teléfono</label>
                    <input class="form-control form-control-sm" type="text" id="telefono" name="telefono"
                        value="{{data.telefono}}" required>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6 text-center mb-3">
                    <label class="col-form-label col-form-label-sm" for="rfc">RFC</label>
                    <input class="form-control form-control-sm" type="text" id="rfc" name="rfc" value="{{data.rfc}}"
                        required>
                </div>
                <div class="col-md-6 text-center">
                    <button type="submit" class="btn btn-primary btn-lg btn-block">Editar</button>
                    {{!-- <button type="submit" class="btn btn-primary btn-lg btn-block"><a href="/eliminar/{{data.correo}}">Eliminar</a></button> --}}
                </div>
            </div>
        </form>
    </div>