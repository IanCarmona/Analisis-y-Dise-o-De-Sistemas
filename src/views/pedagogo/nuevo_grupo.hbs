    <div class="container">

        <form action="" method="post">
            <br><br>
            <h1 class="text-center">Crear Sala</h1>
            <div class="row justify-content-center">
                <div class="form-group text-center">
                    <label for="exampleSelect1" class="form-label mt-4">Id Sala</label>
                    <input class="form-control form-control-lg" type="text"
                        id="inputLarge" name="idSala">
                </div>

                <div class="form-group text-center">
                    <label for="exampleSelect1" class="form-label mt-4">Titular</label>
                    <select class="form-select" id="tipo" onchange="mostrarCampos(this.value)" name="titular">
                        {{#each userdata}}
                        <option value="{{this.correo}}">{{this.nombre}}</option>
                        {{/each}}
                    </select>
                </div>

                
                
                <label for="exampleSelect1" class="form-label mt-4 text-center">Cupo</label>

                <div class="input-group mb-3 text-center">
                    <input type="number" name='cupo' class="form-control" value="10" min="10" max="15">
                    <span class="input-group-text">Espacios Disponibles</span>
                </div>

                <div class="form-group text-center">
                    <label class="col-form-label mt-4" for="inputDefault">Horario de entrada</label>
                    <input type="time" class="form-control" placeholder="Default input" id="inputDefault" name="horaInicio">
                </div>

                <div class="form-group text-center">
                    <label class="col-form-label mt-4" for="inputDefault">Horario de Salida</label>
                    <input type="time" class="form-control" placeholder="Default input" id="inputDefault" name="horaFin">
                </div>

                <div class="col-6 text-center">
                    <br><br>
                    <button type="submit" class="btn btn-primary">Enviar</button>
                </div>





            </div>
        </form>
    </div>
    