            <thead>
                <tr>
                    <th>idAlumno</th>
                    <th>Nombre</th>
                    <th>Apellido Paterno</th>
                    <th>Apellido Materno</th>
                    <th>Reporte</th>
                </tr>
            </thead>
            <tbody>
                {{#each estudiantes}}
